<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
        <property name="basename" value="i18n/messages"/>
        <property name="useCodeAsDefaultMessage" value="true"/>
    </bean>
 
    <bean id="channelProgrammeServiceMock" name="channelProgrammeServiceMock" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="com.tvfreakz.service.ChannelProgrammeService"/>
    </bean>
    
    <bean id="channelProgrammeService" name="channelProgrammeService" class="com.tvfreakz.service.ChannelProgrammeServiceImpl">
    	<property name="channelProgrammeRepository" ref="channelProgrammeRepositoryMock"/>
    </bean>
    
        
    <bean id="channelProgrammeRepositoryMock" name="channelProgrammeRepositoryMock" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="com.tvfreakz.repository.ChannelProgrammeRepository"/>
    </bean>
    
    <bean id="directorService" name="directorService" class="com.tvfreakz.service.DirectorServiceImpl">
    	<property name="directorRepository" ref="directorRepositoryMock"/>
    </bean>
    
        
    <bean id="directorRepositoryMock" name="directorRepositoryMock" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="com.tvfreakz.repository.DirectorRepository"/>
    </bean>

</beans>
